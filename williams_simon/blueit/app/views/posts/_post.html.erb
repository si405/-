<div class="well">
<%= simple_form_for(@post, 
    html: {:class => 'form-horizontal'}) do |f| %>
    <%= f.input :post_title, label: false, 
        input_html:{:class => 'form-control', placeholder: "Post Title"} %>
    </br>
    <%= f.input :post_url, label: false, 
        input_html:{:class => 'form-control', placeholder: "Image URL"} %>
    </br>
    <%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-success' %>
<% end %>