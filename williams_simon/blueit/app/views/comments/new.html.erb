<h2 class="">Add a comment to this post:</h2>
<div class="well">
<%= simple_form_for(@post.comments.build,  
    html: {:class => 'form-horizontal'}) do |f| %>
    <%= f.input :body, label: false, 
        input_html:{:class => 'form-control gloria_font', placeholder: "Comments"} %>
    </br>
    <%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-success' %>
<% end %>