<div class="col-xs-12" >
<div class="col-xs-6 col-xs-offset-4">
<div class="well">
<h2 class="gloria_font">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), 
    html: {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, 
        input_html:{:class => 'form-control', placeholder: "Email address"} %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), input_html:{:class => 'form-control'} %>
    <%= f.input :password_confirmation, required: true, 
        input_html:{:class => 'form-control'} %>
    <%= f.input :mobile_number, required: true, 
        input_html:{:class => 'form-control', placeholder: "Mobile number"} %>
    </br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
