<div class="well">
<%= simple_form_for(@label, html: {:class => 'form-horizontal'}) do |f| %>
    <%= f.input :label_name, label: false, 
        input_html:{:class => 'form-control', placeholder: "Name of label"} %>
  	<br>
   	<%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-success' %>
<% end %>

<br><br>
<%= link_to 'View all labels', labels_path %>
</div>