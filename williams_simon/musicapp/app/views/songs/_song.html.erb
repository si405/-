<div class="well">
<%= simple_form_for([@artist, @artist.songs.build], 
    html: {:class => 'form-horizontal'}) do |f| %>
    <%= f.input :song_name, label: false, 
        input_html:{:class => 'form-control', placeholder: "Song name"} %>
    <br>
    <%= f.input :genre, label: false, 
        input_html:{:class => 'form-control', placeholder: "Genre"} %>
    <br>
    <%= f.input :duration, label: false, 
        input_html:{:class => 'form-control', placeholder: "Song duration in seconds"} %>
    <br>
    <%= f.input :release_date, label: false, 
        input_html:{:class => 'form-control', placeholder: "Release Date"} %>
    <br>
    <%= f.submit "Submit".html_safe, :class => 'btn btn-lg btn-success' %>
<% end %>

<br><br>
<%= link_to 'View all labels', labels_path, :class => 'btn btn-lg btn-primary' %>
</div>