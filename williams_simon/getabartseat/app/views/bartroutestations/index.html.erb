<div class="col-lg-10 col-lg-offset-1">
<div class="well">
<table class="table table-responsive table-bordered table-hover">
<h1 class="col-lg-4 bart_font col-lg-offset-4 heading_color">Route-Station Details</h1>
  <tr>
    <th class="col-lg-1 bart_font heading_color">Route</th>
    <th class="col-lg-1 bart_font heading_color">Station</th>
    <th class="col-lg-1 bart_font heading_color">Sequence</th>
  </tr>
	<% @bartroutestations.each do |station| %>
		<tr>
			<td class="col-lg-1 bart_font body_color">
				<%= station.bartroute.bart_route_name %></td>
			<td class="col-lg-1 bart_font body_color">
				<%= station.bartstation.station_name %></td>
 			<td class="col-lg-1 bart_font body_color">
 				<%= station.route_station_sequence %></td>
 			<td class="col-lg-1 bart_font body_color"><%= link_to "Edit route stations", edit_bartroutestation_path(station),
						:class => 'btn btn-info bart_font' %></td>
		</tr>
	<% end %>
</table>
<%= link_to "Create route stations", new_bartroutestation_path,
						:class => 'btn btn-info bart_font' %>

<%= link_to "Routes", bartroutes_path,
						:class => 'btn btn-info bart_font' %>

<%= link_to "Stations", bartstations_path,
						:class => 'btn btn-info bart_font' %>
</div>
</div>